<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.springboot.dao.redisdatasource.BaseRedisDatasourceMapper">


    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.springboot.model.redisdatasource.BaseRedisDatasource">
        <id column="id" property="id" />
        <result column="host" property="host" />
        <result column="port" property="port" />
        <result column="password" property="password" />
        <result column="db_index" property="dbIndex" />
        <result column="area_address" property="areaAddress" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, host, port, password,db_index,areaAddress
    </sql>
    <select id="getList" parameterType="java.util.Map" resultMap="BaseResultMap">
      SELECT * from base_redis_datasource;
    </select>
    <select id="getRedisSelectList" parameterType="java.lang.String" resultType="string">
      SELECT distinct (host)  from base_redis_datasource where area_address=#{areaAddress}
    </select>
    <select id="getAreaSelectList" resultType="string">
      SELECT distinct (area_address)  from base_redis_datasource order by area_address desc
    </select>
</mapper>
